{
  "name": "jeromeerasmus/browserstack-automate-behat",
  "require": {
      "behat/behat": "2.5.*@stable",
	    "facebook/webdriver": "dev-master",
      "browserstack/browserstack-local": "dev-master",
      "symfony/yaml": "*",
    "symfony/dotenv": "^4.1",
    "guzzlehttp/guzzle": "^6.3"
  },
  "config": {
      "bin-dir": "bin/"
  },
  "scripts": {
    "test": "composer single && composer local && composer parallel",
    "single": "ENV_FILE=/../config/.env ./bin/behat --config=app/config/single.conf.yml",
    "local": "ENV_FILE=/../config/.env ./bin/behat --config=app/config/local.conf.yml",
    "capabilities": "ENV_FILE=/../config/.env METHOD=capabilities php app/lib/BrowserStackMethods.php",
    "parallel": "ENV_FILE=/../config/.env CONFIG_FILE=app/config/parallel.conf.yml /usr/bin/env php app/lib/parallel.php"
  },
  "autoload": {
    "classmap": ["app/lib/"]
  },
  "bin": [
    "app/lib/"
  ]
}
