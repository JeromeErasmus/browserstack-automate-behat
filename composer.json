{
  "name": "jeromeerasmus/browserstack-automate-behat",
  "require": {
    "facebook/webdriver": "dev-master",
    "browserstack/browserstack-local": "dev-master",

    "symfony/dotenv": "^4.1",
    "guzzlehttp/guzzle": "^6.3",
    "behat/behat": "^3.4",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.3",
    "behat/mink-goutte-driver": "^1.2",
    "behat/mink-selenium2-driver": "^1.3",
    "peridot-php/webdriver-manager": "dev-master"
   
  },
  "config": {
      "bin-dir": "bin/"
  },
  "scripts": {
    "start-selenium": "./bin/manager start",
    "run-selenium": "./bin/behat --config=./conf.selenium.yml -f pretty -o std -f junit -o results",
    "run-bs": "ENV_FILE=/../../.env ./bin/behat --config=./conf.browserstack.yml"
    
  },
  "autoload": {
    "classmap": ["app/lib/"]
  },
  "bin": [
    "app/lib/"
  ]
}
